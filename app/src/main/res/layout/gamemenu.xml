<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.MainActivity">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DefenderS"
            android:gravity="center"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/highScore"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="High Score: " />

        <TextView
            android:id="@+id/lastScore"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Score: " />

        <TextView
            android:id="@+id/displayName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/startbutton"
            android:layout_width="match_parent"
            android:background="@drawable/my_button_bg"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="START" />

        <Button
            android:id="@+id/settingsbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="EINSTELLUNGEN" />

        <Button
            android:id="@+id/verbesserungen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="Upgrades" />

        <Button
            android:id="@+id/scorelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"

            android:text="Globale Bestenliste" />

        <Button
                android:id="@+id/spielbeenden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
                android:text="Spiel Beenden" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>